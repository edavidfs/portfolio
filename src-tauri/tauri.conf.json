{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PortfolioDesktop",
  "version": "0.1.0",
  "identifier": "com.portfolio.desktop",
  "build": {
    "beforeDevCommand": "npm run start --prefix ../frontend",
    "devUrl": "http://localhost:4200",
    "frontendDist": "../frontend/dist/ng-portfolio"
  },
  "app": {
    "windows": [
      {
        "title": "Portfolio",
        "width": 1200,
        "height": 900,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}
